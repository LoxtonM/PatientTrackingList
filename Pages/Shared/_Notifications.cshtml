@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <div class="alert-icon">
            <i class="far fa-fw fa-bell"></i>
        </div>
        <div class="alert-message">
            <h3>@TempData["error"]</h3>
        </div>
    </div>
}

