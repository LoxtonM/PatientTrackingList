@page
@model IndexModel
@{
    ViewData["Title"] = "Patient Tracking List";
}

<div class="container-fluid">
    <h1 style="text-align:center">PTL-X - The New Patient Tracking List</h1>
    <br />
    <br />

    <div class="row">
        <dt class="col-md-2">Total Active Referrals:</dt><dd class="col-md-2">@Model.listTotal</dd>
        <dt class="col-md-2">From this year:</dt><dd class="col-md-1">@Model.currentYearTotal</dd>
        <dt class="col-md-2">From last year:</dt><dd class="col-md-1">@Model.prevYearTotal</dd>
        <dt class="col-md-1">Older:</dt><dd class="col-md-1">@Model.olderTotal</dd>
        <dt class="col-md-2">Currently Over 18 Weeks:</dt><dd class="col-md-2">@Model.breachingTotal</dd>
        <dd class="col-md-8">(18 week clock start date: @Model.EighteenWeekDate.ToString("dd/MM/yyyy"))</dd>
        <dt class="col-md-2">Appointment due:</dt><dd class="col-md-2">@Model.apptDueTotal</dd>
        <dt class="col-md-2">Unappointed:</dt><dd class="col-md-2">@Model.unapptTotal</dd>            
    </div>
    <br />

    <div class="row">
        <dt class="col-md-2">Last updated:</dt><dd class="col-md-2">@Model.LastUpdatedDate.ToString("dd/MM/yyyy")</dd>
    </div>
    <br />

    <form id="frmMenu" method="Post">
        <div class="row mb-5">
            <h3>Search form:</h3>
            <div class="col-md-1">
                <label>Name:</label>
            </div>
            <div class="col-md-2">
                <input name="sNameSearch" />
            </div>
            <div class="col-md-1">
                <label>CGU_No:</label>
            </div>
            <div class="col-md-2">
                <input name="sCGUSearch" />
            </div>
            <div class="col-md-1">
                <label>Show  Only Urgent:</label>
            </div>
            <div class="col-md-1">
                <input id="chkUrgent" type="checkbox" value="false" onclick="SetUrgentCheckBox()" asp-for=@Model.isUrgentSelected/>
            </div>
            <div class="col-md-1">
                <label>Show  Only Unchecked:</label>
            </div>
            <div class="col-md-1">
                <input id="chkChecked" type="checkbox" value="false" onclick="SetCheckedCheckBox()" asp-for=@Model.isCheckedSelected />
            </div>
            <div class="col-md-1">
                <label>Referral Pathway:</label>
            </div>
            <div class="col-md-1">
                <select name="sPathwayFilter" asp-for=@Model.pathwaySelected>
                    <option value="">Both</option>
                    <option value="Cancer">Cancer</option>
                    <option value="General">General</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <label>Consultant:</label>
            </div>
            <div class="col-md-4">
                <select name="sConsultantFilter" asp-for=@Model.consultantSelected>
                    <option value="">Select...</option>
                    @foreach(var item in Model.consultantList)
                    {
                        <option value=@item.NAME>@item.NAME</option>
                    }
                </select>
            </div>
            <div class="col-md-1">GC:</div>
            <div class="col-md-4">
                <select name="sGCFilter" asp-for=@Model.GCSelected>
                    <option value="">Select...</option>
                    @foreach (var item in Model.GCList)
                    {
                        <option value=@item.NAME>@item.NAME</option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                <input type="submit" class="btn btn-secondary" />
            </div>
        </div>

        @*<div class="row">
            <div class="col-md-2">
                <input type="submit" class="btn btn-secondary"  />                
            </div>
        </div>*@
        <div class="row">
            <input name="isUrgent" id="txtIsUrgent" hidden="true" />
            <input name="isChecked" id="txtIsChecked" hidden="true" />
        </div>
    </form>
