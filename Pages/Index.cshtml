    @if(Model.pageNumbers.Count() > 1)
    {
        <div class="row">
            <ul class="d-flex flex-row list-unstyled">
                <li><a asp-page="\Index" asp-route-pNo=1 asp-route-sPathwayFilter=@Model.pathwaySelected asp-route-sConsultantFilter=@Model.consultantSelected asp-route-sGCFilter=@Model.GCSelected>First</a>&nbsp;&nbsp;&nbsp;</li>
                @if(Model.currentPageNo != 1)
                {
                    <li><a asp-page="\Index" asp-route-pNo=@Model.previousPage asp-route-sPathwayFilter=@Model.pathwaySelected asp-route-sConsultantFilter=@Model.consultantSelected asp-route-sGCFilter=@Model.GCSelected>Back</a> &nbsp;&nbsp;&nbsp;</li>
                }
                @foreach (var i in Model.pageNumbers)
                {
                    @if (i >= Model.currentPageNo - 20 && i <= Model.currentPageNo + 20)
                    {
                        @if (i == Model.currentPageNo)
                        {
                            <li>@i &nbsp;&nbsp;&nbsp;</li>
                        }
                        else
                        {
                            <li><a asp-page="\Index" asp-route-pNo=@i asp-route-sPathwayFilter=@Model.pathwaySelected asp-route-sConsultantFilter=@Model.consultantSelected asp-route-sGCFilter=@Model.GCSelected>@i</a> &nbsp;&nbsp;&nbsp;</li>
                        }
                    }
                }
                @if (Model.currentPageNo != Model.pageNumbers.Count())
                {
                    <li><a asp-page="\Index" asp-route-pNo=@Model.nextPage asp-route-sPathwayFilter=@Model.pathwaySelected asp-route-sConsultantFilter=@Model.consultantSelected asp-route-sGCFilter=@Model.GCSelected>Next</a>&nbsp;&nbsp;&nbsp;</li>
                }
                <li><a asp-page="\Index" asp-route-pNo=@Model.pageNumbers.Count() asp-route-sPathwayFilter=@Model.pathwaySelected asp-route-sConsultantFilter=@Model.consultantSelected asp-route-sGCFilter=@Model.GCSelected>Last</a></li>
